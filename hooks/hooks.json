{
  "hooks": [
    {
      "name": "learning-session-start",
      "description": "Triggered when user starts a learning session with /learn",
      "trigger": "command",
      "triggerValue": "/learn",
      "actions": [
        {
          "type": "log",
          "message": "Learning session started - assigning agents based on user selection"
        },
        {
          "type": "invoke-agent",
          "description": "Initialize learning path selection"
        },
        {
          "type": "create-context",
          "context": "learning_session",
          "persist": true
        }
      ],
      "enabled": true
    },
    {
      "name": "assessment-completion",
      "description": "Triggered when user completes a skill assessment with /assess",
      "trigger": "command",
      "triggerValue": "/assess",
      "actions": [
        {
          "type": "evaluate",
          "target": "assessment_results",
          "action": "save_progress"
        },
        {
          "type": "recommend",
          "recommendation_type": "learning_paths",
          "basedOn": "assessment_results"
        },
        {
          "type": "suggest-projects",
          "filter": "weakness_areas"
        }
      ],
      "enabled": true
    },
    {
      "name": "agent-consultation",
      "description": "Triggered when user consults with an agent",
      "trigger": "agent-invoke",
      "actions": [
        {
          "type": "track",
          "metric": "agent_consultation_count",
          "increment": 1
        },
        {
          "type": "log",
          "message": "Agent consultation recorded for learning analytics"
        }
      ],
      "enabled": true
    },
    {
      "name": "roadmap-navigation",
      "description": "Triggered when user browses roadmaps with /roadmap",
      "trigger": "command",
      "triggerValue": "/roadmap",
      "actions": [
        {
          "type": "track",
          "metric": "roadmap_views",
          "increment": 1
        },
        {
          "type": "correlate",
          "relation": "learning_session",
          "action": "link_to_session"
        }
      ],
      "enabled": true
    },
    {
      "name": "stack-builder-session",
      "description": "Triggered when user uses /stack command",
      "trigger": "command",
      "triggerValue": "/stack",
      "actions": [
        {
          "type": "log",
          "message": "Technology stack builder session initiated"
        },
        {
          "type": "track",
          "metric": "stack_creations",
          "increment": 1
        }
      ],
      "enabled": true
    },
    {
      "name": "learning-progress-update",
      "description": "Triggered periodically to update learning progress",
      "trigger": "scheduled",
      "triggerValue": "daily",
      "actions": [
        {
          "type": "analyze",
          "metric": "learning_activity",
          "timeframe": "last_24_hours"
        },
        {
          "type": "generate-report",
          "report_type": "daily_progress"
        },
        {
          "type": "update-status",
          "status": "progress_updated"
        }
      ],
      "enabled": true
    },
    {
      "name": "skill-milestone-achievement",
      "description": "Triggered when user reaches skill milestones",
      "trigger": "milestone",
      "triggerValue": "skill_mastery_25_50_75_90_100",
      "actions": [
        {
          "type": "celebrate",
          "action": "send_achievement_message"
        },
        {
          "type": "unlock",
          "unlock_type": "advanced_content",
          "basedOn": "milestone_level"
        },
        {
          "type": "recommend",
          "recommendation_type": "next_skills",
          "basedOn": "current_mastery"
        }
      ],
      "enabled": true
    },
    {
      "name": "resource-recommendations",
      "description": "Provide curated resources based on learning path",
      "trigger": "on-demand",
      "actions": [
        {
          "type": "filter",
          "filter_by": "current_learning_topic"
        },
        {
          "type": "rank",
          "criteria": [
            "relevance",
            "quality",
            "community_rating",
            "recent_activity"
          ]
        },
        {
          "type": "deliver",
          "format": "curated_list"
        }
      ],
      "enabled": true
    },
    {
      "name": "project-suggestion-engine",
      "description": "Suggest projects at appropriate difficulty level",
      "trigger": "on-demand",
      "triggerValue": "/learn",
      "actions": [
        {
          "type": "analyze",
          "analysis": "user_skill_level"
        },
        {
          "type": "filter",
          "criteria": [
            "difficulty_match",
            "skill_coverage",
            "learning_style",
            "time_available"
          ]
        },
        {
          "type": "rank",
          "by": "relevance_to_goals"
        },
        {
          "type": "present",
          "format": "progressive_difficulty"
        }
      ],
      "enabled": true
    },
    {
      "name": "community-engagement",
      "description": "Encourage community participation and feedback",
      "trigger": "milestone",
      "triggerValue": "project_completion",
      "actions": [
        {
          "type": "suggest",
          "action": "share_on_github"
        },
        {
          "type": "recommend",
          "action": "contribute_to_open_source"
        },
        {
          "type": "connect",
          "community": "discord_github"
        }
      ],
      "enabled": true
    },
    {
      "name": "personalization-learning",
      "description": "Continuously improve recommendations based on user behavior",
      "trigger": "background",
      "frequency": "weekly",
      "actions": [
        {
          "type": "analyze",
          "metrics": [
            "learning_patterns",
            "time_spent_by_topic",
            "success_rates",
            "preferences"
          ]
        },
        {
          "type": "train",
          "model": "user_preference_model"
        },
        {
          "type": "update",
          "recommendations": "personalized"
        }
      ],
      "enabled": true
    },
    {
      "name": "motivation-and-engagement",
      "description": "Keep users motivated with progress tracking and achievements",
      "trigger": "scheduled",
      "frequency": "weekly",
      "actions": [
        {
          "type": "track",
          "metrics": [
            "streak_days",
            "skills_mastered",
            "projects_completed",
            "achievements_unlocked"
          ]
        },
        {
          "type": "celebrate",
          "action": "send_motivational_message"
        },
        {
          "type": "suggest",
          "action": "next_challenge"
        }
      ],
      "enabled": true
    },
    {
      "name": "adaptive-difficulty",
      "description": "Automatically adjust learning difficulty based on performance",
      "trigger": "assessment-complete",
      "actions": [
        {
          "type": "evaluate",
          "metric": "assessment_performance"
        },
        {
          "type": "classify",
          "classification": "difficulty_adjustment"
        },
        {
          "type": "update",
          "resource_difficulty": "adaptive"
        }
      ],
      "enabled": true
    },
    {
      "name": "career-path-alignment",
      "description": "Ensure learning aligns with career goals",
      "trigger": "quarterly",
      "actions": [
        {
          "type": "review",
          "target": "career_goals"
        },
        {
          "type": "analyze",
          "current_path": "learning_progress"
        },
        {
          "type": "recommend",
          "adjustments": "if_needed"
        }
      ],
      "enabled": true
    },
    {
      "name": "interview-preparation-tracking",
      "description": "Track interview readiness based on learning progress",
      "trigger": "on-demand",
      "actions": [
        {
          "type": "assess",
          "readiness": "interview_preparation"
        },
        {
          "type": "identify",
          "gaps": "interview_weak_areas"
        },
        {
          "type": "create-plan",
          "plan_type": "interview_prep"
        }
      ],
      "enabled": true
    }
  ],
  "settings": {
    "persistUserProgress": true,
    "enableAnalytics": true,
    "enablePersonalization": true,
    "updateFrequency": "realtime",
    "cachingEnabled": true,
    "offlineMode": false
  },
  "notifications": {
    "enabled": true,
    "types": [
      "milestone_achievement",
      "daily_motivation",
      "weekly_progress_report",
      "recommended_actions",
      "community_highlights"
    ],
    "frequency": "optimized_for_engagement"
  }
}
